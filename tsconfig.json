{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "lib": ["ES2020"],
    "target": "ES2020",
    "strict": true,
    "outDir": "./",
    "preserveConstEnums": true,
    "removeComments": true,
    "noImplicitAny": false,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
    "*.d.ts"
  ]
}
